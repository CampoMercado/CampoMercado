
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // In a real app, this would check for an admin role,
      // for now we'll allow any authenticated user to be an "admin".
      return request.auth != null;
    }

    match /produces/{produceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /prices/{priceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
