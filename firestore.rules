
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // For now, we consider any authenticated user an "admin" for price updates.
      // This is a placeholder and should be replaced with real role-based security.
      return request.auth != null;
    }

    // Protect user profiles: only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Protect user inventory: only the user can manage their own inventory
      match /inventory/{inventoryItemId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Protect user-defined costs: only the user can manage them
      match /costs/{costId} {
        // Explicitly grant list and get (read), and write permissions.
        allow list, get, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /produces/{produceId} {
      // Any authenticated user can read produce data
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /prices/{priceId} {
      // Any authenticated user can read price data
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
