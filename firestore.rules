
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // For now, we consider any authenticated user an "admin".
      // This allows anonymous users to write, which is necessary for the current app setup.
      return request.auth != null;
    }

    match /produces/{produceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /prices/{priceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
